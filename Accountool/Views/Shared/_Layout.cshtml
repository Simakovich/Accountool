@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title class="bg-primary">@ViewData["Title"] - Accountool</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Accountool.styles.css" asp-append-version="true" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-primary">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="true" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Create and change data
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="MeasureTypes" asp-action="Index">MeasureTypes</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="Towns" asp-action="Index">Towns</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Indications" asp-action="Index">Indication</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Prediction" asp-action="Index">Prediction</a>
                        </li>
                    </ul>
                    <a class="navbar-brand mx-auto text-white" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["CompanyName"]</a>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="padding-bottom: 600px;">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <div class="row">
                <div class="demo-content bg-alt col">
                    <div style="color:white">Trading object type "Kiosk"</div>
                    <img src="/images/kiosk.jpg" class="img-fluid" style="height: 500px; object-fit: cover;" alt="Trading object type " "Kiosk" "">
                </div>
                <div class="demo-content bg-alt col">
                    <div style="color:white">Non-insulated trading object type</div>
                    <img src="/images/objekt.jpg" class="img-fluid" style="height: 500px; object-fit: cover;" alt="Non-insulated trading object type">
                </div>
                <div class="demo-content bg-alt col">
                    <div style="color:white">Trading object type "Pavilion"</div>
                    <img src="/images/pavilion.jpg" class="img-fluid" style="height: 500px; object-fit: cover;" alt="Trading object type " "Pavilion" "">
                </div>
            </div>
        </div>
        <div class="container d-flex justify-content-between">
            <div>
                <span style="color: white;">&copy; 2024 - Accountool - </span><a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white;">Privacy</a>
            </div>
            <div>
                <a href="@Url.Action("Index", "Feedback")" style="color: white;">Обратная связь</a>
            </div>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>